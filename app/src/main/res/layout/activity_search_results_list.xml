<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".businesses.list.BusinessesListActivity">

    <fragment
        android:id="@+id/businesses_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.8"
        android:name="tamirmo.uncrowd.businesses.list.BusinessesFragment"
        android:layout_margin="8dp"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/advanced_search_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/businesses_fragment"
        app:layout_constraintBottom_toTopOf="@id/map_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/advanced_search_button_background">

        <ImageView
            android:id="@+id/advanced_search_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:srcCompat="@drawable/advanced_search_icon"
            android:layout_marginTop="1dp"
            android:duplicateParentState="true"
            android:clickable="false"/>

        <Button
            android:id="@+id/advanced_search_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/advanced_search_icon"
            android:background="@null"
            android:text="@string/advanced_search_btn_text"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:textSize="24sp"
            android:duplicateParentState="true"
            android:clickable="false"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/map_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/advanced_search_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/map_button_background">

        <ImageView
            android:id="@+id/map_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:srcCompat="@drawable/show_map_icon"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:clickable="false"/>

        <Button
            android:id="@+id/map_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/map_icon"
            android:background="@null"
            android:textColor="#2368d7"
            android:textAllCaps="false"
            android:text="@string/map_btn_text"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:textSize="24sp"
            android:clickable="false"/>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>